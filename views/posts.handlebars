{{#each posts as |post|}}
  <div class="postCard">
    <div class="postHeader">
      <h3>{{post.title}}</h3>
    </div>
    <div class="postBody">
      <p>
        {{post.post_content}}
      </p>
    </div>
    <div class="postFooter">
      <p>
      Created by {{post.user.name}} on {{post.date_created}}
      </p>
    </div>
  </div>
{{/each}}